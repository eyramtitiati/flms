<h1>Venues</h1>

<% if current_user.admin? %>
  <%= link_to 'Add New Venue', new_venue_path, class: 'btn btn-primary mb-3' %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <% if current_user.admin? %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <td><%= link_to venue.name, venue_path(venue) %></td>
        <td><%= venue.location.name %></td>
        <% if current_user.admin? %>
          <td>
            <%= link_to 'Edit', edit_venue_path(venue), class: 'btn btn-secondary' %>
            <%= link_to 'Delete', venue, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
