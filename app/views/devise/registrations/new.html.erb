<!-- app/views/devise/registrations/new.html.erb -->
<section class="bg-light p-3 p-md-4 p-xl-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-xxl-11">
        <div class="card border-light-subtle shadow-sm">
          <div class="row g-0">
            <div class="col-12 col-md-6">
              <img class="img-fluid rounded-start w-100 h-100 object-fit-cover" loading="lazy" src="<%= asset_path('logo-img-1.png') %>" alt="Welcome to our community!">
            </div>
            <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
              <div class="col-12 col-lg-11 col-xl-10">
                <div class="card-body p-3 p-md-4 p-xl-5">
                  <div class="row">
                    <div class="col-12">
                      <div class="mb-5">
                        <div class="text-center mb-4">
                          <%= link_to root_path do %>
                            <%= image_tag 'logo-img-1.png', alt: 'Logo', width: 175, height: 57 %>
                          <% end %>
                        </div>
                        <h4 class="text-center">Join First Love Marriage Lab!</h4>
                      </div>
                    </div>
                  </div>
                  <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true) do |form| %>
                    <div class="row gy-3 overflow-hidden">
                      <div class="col-12">
                        <div class="form-floating mb-3">
                          <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "name@example.com" %>
                          <%= form.label :email, class: "form-label" %>
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="form-floating mb-3">
                          <%= form.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
                          <%= form.label :password, class: "form-label" %>
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="form-floating mb-3">
                          <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm Password" %>
                          <%= form.label :password_confirmation, class: "form-label" %>
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="d-grid">
                          <%= form.submit "Sign up now", class: "btn btn-dark btn-lg" %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                  <div class="row">
                    <div class="col-12">
                      <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center mt-5">
                        <%= link_to "Log in", new_session_path(resource_name), class: "link-secondary text-decoration-none" %>
                        <%= link_to "Forgot password", new_password_path(resource_name), class: "link-secondary text-decoration-none" %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
