<!-- app/views/memberships/_form.html.erb -->
<%= form_with(model: membership, local: true, html: { id: "membership-form" }) do |form| %>
  <% if membership.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(membership.errors.count, "error") %> prohibited this membership from being saved:</h2>
      <ul>
        <% membership.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :phone %>
    <%= form.text_field :phone, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :email %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :partner_first_name, "Partner's First Name" %>
    <%= form.text_field :partner_first_name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :partner_last_name, "Partner's Last Name" %>
    <%= form.text_field :partner_last_name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :partner_phone, "Partner's Phone Number" %>
    <%= form.text_field :partner_phone, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :partner_email, "Partner's Email Address" %>
    <%= form.email_field :partner_email, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :pastor_name, "Pastor's Name" %>
    <%= form.text_field :pastor_name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :partner_pastor_name, "Partner's Pastor Name" %>
    <%= form.text_field :partner_pastor_name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :ministry %>
    <%= form.text_field :ministry, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :partner_ministry, "Partner's Ministry" %>
    <%= form.text_field :partner_ministry, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :lab_results, "Upload Lab Results" %>
    <%= form.file_field :lab_results, class: 'form-control' %>
  </div>

  <% if current_user.admin? %>
    <div class="mb-3">
      <%= form.label :status %>
      <%= form.select :status, options_for_select(['Pending', 'Confirmed'], membership.status), class: 'form-control' %>
    </div>
    <%= form.submit "Submit", class: "btn btn-primary" %>
  <% else %>
    <%= form.submit "Make Payment and Submit", class: "btn btn-primary", id: "payment-submit" %>
  <% end %>
<% end %>

<script>
  document.getElementById('payment-submit').addEventListener('click', function(event) {
    event.preventDefault(); // Prevent the form from submitting immediately

    // Submit the form by targeting the form with the correct ID
    document.getElementById('membership-form').submit();
  });
</script>
