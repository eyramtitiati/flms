<h1>Locations</h1>

<% if current_user.admin? %>
  <%= link_to 'Add New Location', new_location_path, class: 'btn btn-primary mb-3' %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact Person</th>
      <% if current_user.admin? %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.name, location_path(location) %></td>
        <td><%= location.contact_person %></td>
        <% if current_user.admin? %>
          <td>
            <%= link_to 'Edit', edit_location_path(location), class: 'btn btn-secondary' %>
            <%= link_to 'Delete', location, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
