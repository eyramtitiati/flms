<h1><%= @location.name %> - Details</h1>

<p><strong>Contact Person:</strong> <%= @location.contact_person %></p>

<h2>Venues at this Location</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Venue Name</th>
      <% if current_user.admin? %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @location.venues.each do |venue| %>
      <tr>
        <td><%= link_to venue.name, venue_path(venue) %></td>
        <% if current_user.admin? %>
          <td>
            <%= link_to 'Edit', edit_venue_path(venue), class: 'btn btn-secondary' %>
            <%= link_to 'Delete', venue, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to Locations', locations_path, class: 'btn btn-secondary' %>
