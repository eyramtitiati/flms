<h1>Admin Dashboard</h1>

<div class="row">
  <div class="col-md-4">
    <div class="card text-white bg-primary mb-3">
      <div class="card-header">Total Registrations</div>
      <div class="card-body">
        <h5 class="card-title"><%= @total_registrations %></h5>
        <p class="card-text">All membership registrations in the system.</p>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card text-white bg-warning mb-3">
      <div class="card-header">Pending Registrations</div>
      <div class="card-body">
        <h5 class="card-title"><%= @pending_registrations %></h5>
        <p class="card-text">Membership registrations that are currently pending.</p>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card text-white bg-success mb-3">
      <div class="card-header">Confirmed Registrations</div>
      <div class="card-body">
        <h5 class="card-title"><%= @confirmed_registrations %></h5>
        <p class="card-text">Membership registrations that have been confirmed.</p>
      </div>
    </div>
  </div>
</div>
